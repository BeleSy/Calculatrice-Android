<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#9CE81B"
    android:layout_height="match_parent" >

    <!-- Entête aligné en haut -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFDDE"
        android:layout_marginTop="10dp"
        android:layout_margin="20dp"
        android:gravity="right" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/viewCalculs"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@id/viewCalculs"
            android:id="@+id/viewResultat"
            android:text="0"
            android:textColor="#000"
            android:textSize="30sp" />
    </RelativeLayout>


    <!-- Contenu -->
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:gravity="center" >
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/gridClavier"
            android:layout_width="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="#1BE885"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:columnCount="5"
            tools:context=".GridLayoutActivity" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="←"
                android:layout_margin="5dp"
                android:id="@+id/btBack"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="CE"
                android:layout_margin="5dp"
                android:id="@+id/btCE"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="C"
                android:layout_margin="5dp"
                android:id="@+id/btC"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="0"
                android:text="\u00B1"
                android:layout_margin="5dp"
                android:id="@+id/btPlusMoins"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="4"
                android:layout_row="0"
                android:text="\u221A"
                android:layout_margin="5dp"
                android:id="@+id/btRacine"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="7"
                android:layout_margin="5dp"
                android:id="@+id/bt7"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="8"
                android:layout_margin="5dp"
                android:id="@+id/bt8"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="9"
                android:layout_margin="5dp"
                android:id="@+id/bt9"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="1"
                android:text="/"
                android:layout_margin="5dp"
                android:id="@+id/btDiviser"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="4"
                android:layout_row="1"
                android:text="%"
                android:layout_margin="5dp"
                android:id="@+id/btPourcentage"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="4"
                android:layout_margin="5dp"
                android:id="@+id/bt4"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="5"
                android:layout_margin="5dp"
                android:id="@+id/bt5"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="2"
                android:text="6"
                android:layout_margin="5dp"
                android:id="@+id/bt6"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="2"
                android:text="*"
                android:layout_margin="5dp"
                android:id="@+id/btMultiplier"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="4"
                android:layout_row="2"
                android:text="1/x"
                android:layout_margin="5dp"
                android:id="@+id/btInverser"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="1"
                android:layout_margin="5dp"
                android:id="@+id/bt1"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_row="3"
                android:text="2"
                android:layout_margin="5dp"
                android:id="@+id/bt2"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="3"
                android:text="3"
                android:layout_margin="5dp"
                android:id="@+id/bt3"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="3"
                android:text="-"
                android:layout_margin="5dp"
                android:id="@+id/btMoins"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
            <Button
                android:id="@+id/btEgale"
                android:layout_column="4"
                android:layout_gravity="fill_vertical"
                android:background="#48DBFF"
                android:layout_row="3"
                android:textSize="40sp"
                android:layout_margin="5dp"
                android:layout_width="70dp"
                android:clickable="true"
                android:layout_rowSpan="2"
                android:text="=" />
            <Button
                android:id="@+id/bt0"
                android:layout_column="0"
                android:background="#EEF7FF"
                android:layout_columnSpan="2"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:textSize="40sp"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4"
                android:text="0" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_row="4"
                android:text=","
                android:layout_margin="5dp"
                android:id="@+id/btVirgule"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#EEF7FF" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="4"
                android:text="+"
                android:layout_margin="5dp"
                android:id="@+id/btPlus"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick="buttonClick"
                android:background="#B3FDFF" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>